@model Sportswear.Models.Transaction
@using Microsoft.AspNetCore.Identity
@using Sportswear.Areas.Identity.Data

@inject SignInManager<SportswearUser> SignInManager
@inject UserManager<SportswearUser> UserManager

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/whiteBg.css" />

@if (ViewBag.msg != null)
{
    <script>alert("@ViewBag.msg");</script>
}

<div class="container">
    <div class="mt-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb p-0 mt-5">
                <li class="breadcrumb-item">
                    <a asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Cart</li>
            </ol>
        </nav>
        <h1 class="mt-1">MY CART</h1>
    </div>
</div>

<div class="pb-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 p-5 bg-white rounded shadow-sm mb-5">

                <!-- Shopping cart table -->
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col" class="border-0 bg-light">
                                    <div class="p-2 px-3 text-uppercase">Product</div>
                                </th>
                                <th scope="col" class="border-0 bg-light">
                                    <div class="py-2 text-uppercase">Price</div>
                                </th>
                                @*<th scope="col" class="border-0 bg-light">
                                        <div class="py-2 text-uppercase">Quantity</div>
                                    </th>
                                *@
                                <th scope="col" class="border-0 bg-light">
                                    <div class="py-2 text-uppercase">Remove</div>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.Products != null)
                            {
                                @foreach (var item in ViewBag.Products)
                                {
                                    <tr>
                                        <th scope="row" class="border-0">
                                            <div class="p-2">
                                                <!--PRODUCT IMAGE-->
                                                <img src="@item.ImageURL" width="70" class="img-fluid rounded shadow-sm">
                                                <div class="ml-3 d-inline-block align-middle">
                                                    <h5 class="mb-0">
                                                        <a href="#" class="text-dark d-inline-block align-middle">@item.Name</a>
                                                    </h5><span class="text-muted font-weight-normal font-italic d-block">@item.Category</span>
                                                </div>
                                            </div>
                                        </th>
                                        <td class="border-0 align-middle"><strong>RM @item.Price</strong></td>
                                        @*<td class="border-0 align-middle">
                                                <strong> @ViewBag.qty </strong>
                                            </td>
                                        *@
                                        <td class="border-0 align-middle">
                                            <a asp-controller="Transactions" asp-action="deleteItem"
                                               asp-route-productName="@item.Name" class="text-dark">
                                                <svg width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                                    <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z" />
                                                </svg>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="bg-light rounded-pill px-4 py-3 text-uppercase font-weight-bold">Shipping Information</div>
        <form asp-action="Create">
            <div class="row py-5 p-4 bg-white rounded shadow-sm">
                <div class="form-group col-lg-6">
                    <label asp-for="userAddress" class="control-label">
                        <strong class="text-muted">Shipping Address</strong>
                    </label>
                    <textarea rows="5" asp-for="userAddress" class="form-control" required>
                    </textarea>
                    <span asp-validation-for="userAddress" name="Shipping Address" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="userPhone" class="control-label">
                        <strong class="text-muted">Contact Number</strong>
                    </label>
                    <input asp-for="userPhone" class="form-control" required />
                    <span asp-validation-for="userPhone" class="text-danger"></span>
                </div>
            </div>
            <div class="row py-5 p-4 bg-white rounded shadow-sm">
                <div class="col-lg-6">
                    <div class="bg-light rounded-pill px-4 py-3 text-uppercase font-weight-bold">Coupon code</div>
                    <div class="p-4">
                        <p class="font-italic mb-4">If you have a coupon code, please enter it in the box below</p>
                        <div class="input-group mb-4 border rounded-pill p-2">
                            <input type="text" placeholder="Apply coupon" aria-describedby="button-addon3" class="form-control border-0" asp-for="couponId">
                            <div class="input-group-append border-0">
                                <button id="button-addon3" type="button" class="btn btn-dark px-4 rounded-pill">
                                    <i class="fa fa-gift mr-2"></i>Apply coupon
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="bg-light rounded-pill px-4 py-3 text-uppercase font-weight-bold">Instructions for seller</div>
                    <div class="p-4">
                        <p class="font-italic mb-4">If you have some information for the seller you can leave them in the box below</p>
                        <textarea name="" cols="30" rows="2" class="form-control" asp-for="message"></textarea>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="bg-light rounded-pill px-4 py-3 text-uppercase font-weight-bold">Order summary </div>
                    <div class="p-4">
                        <p class="font-italic mb-4">Our company does not provide free shipping promotion.</p>
                        <ul class="list-unstyled mb-4">
                            <li class="d-flex justify-content-between py-3 border-bottom">
                                <strong class="text-muted">Order Subtotal </strong>
                                <strong>RM @ViewBag.TotalPrice</strong>
                            </li>
                            <li class="d-flex justify-content-between py-3 border-bottom">
                                <strong class="text-muted">Shipping</strong><strong>RM 20.00</strong>
                            </li>
                            <li class="d-flex justify-content-between py-3 border-bottom">
                                <strong class="text-muted">Total</strong>
                                <h5 class="font-weight-bold" asp-for="price">RM @ViewBag.GrandTotalPrice
                            </li>

                        </ul>

                        <div class="col-md-12">
                            <p class="font-italic mb-4">Please ensure you are logged in as an user before checkout.</p>

                            @if (SignInManager.IsSignedIn(User))
                            {
                                <input type="submit" class="btn btn-dark rounded-pill py-2 btn-block black-border"
                                       value="Checkout" />
                            }
                            else
                            {
                                <input type="submit" class="btn btn-dark rounded-pill py-2 btn-block black-border"
                                       value="Checkout" id="login" asp-area="Identity" asp-page="/Account/Login" />
                            }

                        </div>
                </div>
            </div>
        </form>

    </div>
</div>

