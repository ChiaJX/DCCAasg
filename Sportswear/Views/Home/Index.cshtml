<link rel="stylesheet" href="~/css/main.css" />

@model Sportswear.Models.ProductEntity
@{
    ViewData["Title"] = "Home Page";
}

<div id="bannerCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#bannerCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#bannerCarousel" data-slide-to="1"></li>
        <li data-target="#bannerCarousel" data-slide-to="2"></li>
    </ol>

    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block img-fluid w-100"
                 src="https://d2i5t58cb8fkm0.cloudfront.net/wp-content/uploads/2019/08/21135107/nikeredux-1200x630.jpg"
                 alt="First slide">
            <div class="carousel-caption">
                <!-- TODO: change info -->
                <h1>Sportswear.</h1>
                <p>SWEAT IN STYLE</p>
                <p><a class="btn btn-lg btn-primary" asp-action="aboutUs">About Us</a></p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block img-fluid w-100"
                 src="https://media1.popsugar-assets.com/files/thumbor/Ds6cTnbY59yDqaWQGE3vLyxPtv8/fit-in/2048xorig/filters:format_auto-!!-:strip_icc-!!-/2020/06/11/783/n/1922729/6336baa61d948aab_underarmour2/i/under-armour-sportswear-face-mask-for-covid-19.jpg"
                 alt="Second slide">

        </div>
        <div class="carousel-item">
            <img class="d-block img-fluid w-100"
                 src="https://i.dailymail.co.uk/1s/2019/12/01/22/21686046-0-image-a-22_1575238568099.jpg"
                 alt="Third slide">
        </div>
    </div>

    <a class="carousel-control-prev" href="#bannerCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#bannerCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


<section id="view-product">
    <div class="container mt-3">
        <div class="row">
            <div class="col text-center my-4"><h1>Products</h1></div>
        </div>
        <div class="row">

            <!--@if (Model.Value != null)
    {
        foreach (var item in Model.Value)
        {-->
            <div class="col-4">
                <div class="card product-card" type="button">
                    <a class="deco-none" asp-controller="Product" asp-action="productDetails" asp-route-productName="productName">
                        <div class="img-container">
                            <img class="product-img" src="productImgUrl" />

                            <div class="mask">
                                <div class="view-text w-100">
                                    View Product
                                </div>
                            </div>
                        </div>

                        <div class="card-body">
                            <p class="card-text" id="product-title"> productName</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <p class="card-text" id="product-price"> productPrice</p>
                                <small class="text-muted">Dogs Sneakers</small>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
            }
            }
        </div>
    </div>
</section>



<style>
    .mask {
        position: absolute;
        top: auto !important;
        right: 0;
        bottom: 0;
        left: 0;
        opacity: 0;
        overflow: hidden;
        transition: .5s ease;
        background-attachment: fixed;
        background-color: rgba(0, 0, 0, 0.6);
    }

    a {
        color: inherit;
        text-decoration: inherit;
    }

        a:link {
            color: inherit;
            text-decoration: inherit;
        }

        a:hover {
            color: inherit;
            text-decoration: inherit;
        }

    .mask > .view-text {
        margin-top: 0.15em;
        margin-bottom: 0.15em;
        color: white;
        text-align: center;
    }
</style>
